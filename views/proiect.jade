include includes/head
	body
		include includes/page-header

		section.container

			//- Page title
			header.b-heading
				h1.b-heading__title
					= name
				strong.b-heading__subtitle
					= details.textIntro
				p.b-heading__descr
					= details.textDescription

			//- Slideshow
			#details-slideshow.carousel.slide(data-ride='carousel')

				//- Wrapper for slides
				.carousel-inner
					each val, index in details.images
						//- - var css = (index == 0) ? 'active' : ''
						- var css = (index > 0) ? 'is-js-shown' : 'active'
						.item(class='#{css}', data-target='#details-slideshow', data-slide-to='#{index}')
							img(src='/images/#{details.imagesFolder}/#{val.filename}', alt='')
							if val.caption
								.carousel-caption
									p= val.caption

				//- Captions black box background
				.caption-background

				//- Indicators
				ol.carousel-indicators.is-js-shown
					each val, index in details.images
						- var css = (index == 0) ? 'active' : ''
						li(class='#{css}', data-target='#details-slideshow', data-slide-to='#{index}')

				//- Controls
				a.left.carousel-control.is-js-shown(href='#details-slideshow', data-slide='prev')
					span.glyphicon.glyphicon-chevron-left
				a.right.carousel-control.is-js-shown(href='#details-slideshow', data-slide='next')
					span.glyphicon.glyphicon-chevron-right
			//- /Slideshow

			//- Stories
			ul.media-list
				each val, index in details.stories
					li.media
						.pull-left
							.date
								span.day= moment(val.date).format('DD')
								span.month= moment(val.date).format('MMM')
								span.year= moment(val.date).format('YYYY')
						.media-body
							h4.media-heading
								= val.name
							p
								= val.description
			//- /Stories

		include includes/page-footer
